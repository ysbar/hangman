<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="700.0" prefWidth="900.0" spacing="40" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="github.ysbar.hangman.controller.ScoreController">
    <stylesheets><URL value="@styles.css" /></stylesheets>
    <Label fx:id="resultLabel" style="-fx-font-size: 48px; -fx-font-weight: bold;" text="YOU WON!" />
    <HBox alignment="CENTER" spacing="40">
        <VBox prefHeight="300" prefWidth="320" spacing="20" styleClass="card">
            <Label styleClass="card-title" text="Current Score" />
            <Separator />
            <VBox spacing="12">
                <Label fx:id="currentScoreLabel" styleClass="card-text" text="Score: 7000" />
                <Label fx:id="wordsGuessedLabel" styleClass="card-text" text="Words guessed: 14" />
                <Label fx:id="attemptsLabel" styleClass="card-text" text="Attempts left: 3" />
                <Label fx:id="timeLabel" styleClass="card-text" text="Time to finish: 01:03" />
            </VBox>
        </VBox>
        <VBox prefHeight="300" prefWidth="320" spacing="20" styleClass="card">
            <Label styleClass="card-title" text="Highscore" />
            <Separator />
            <VBox spacing="12">
                <Label fx:id="highScoreLabel" styleClass="card-text" text="Score: 24000" />
                <Label fx:id="highScoreWordsLabel" styleClass="card-text" text="Words guessed: 14" />
            </VBox>
        </VBox>
    </HBox>
    <HBox alignment="CENTER" spacing="80">
        <Button onAction="#handlePlayAgain" styleClass="pill-btn" text="Continue" />
        <Button onAction="#handleQuit" styleClass="pill-btn" text="Quit" />
    </HBox>
</VBox>
